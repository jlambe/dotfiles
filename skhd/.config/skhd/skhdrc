# Navigate windows in current space
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# Maximise window
shift + alt - m : yabai -m window --toggle zoom-fullscreen

# Balance windows layout
shift + alt - e : yabai -m space --balance

ctrl + alt - v : yabai -m space --mirror y-axis
ctrl + alt - x : yabai -m space --mirror x-axis

# Create/destroy spaces
ctrl + alt - c : yabai -m space --create
ctrl + alt - d : yabai -m space --destroy

# Navigate spaces
shift + alt - l : yabai -m space --focus next
shift + alt - h : yabai -m space --focus prev

shift + alt - 1 : yabai -m space --focus 1
shift + alt - 2 : yabai -m space --focus 2
shift + alt - 3 : yabai -m space --focus 3
shift + alt - 4 : yabai -m space --focus 4
shift + alt - 5 : yabai -m space --focus 5

# Alternate spaces
ctrl + alt - 6 : yabai -m space --focus recent

# Move window to space
ctrl + alt - l : yabai -m window --space next --focus
ctrl + alt - h : yabai -m window --space prev --focus
